<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
    <title>Register</title>
</head>

<body>
    {{>navbar user=user}}
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
                            <form id="registrationForm" action="/register" method="post">

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" id="firstName" name="firstname" class="form-control form-control-lg" />
                                            <label class="form-label" for="firstName">First Name</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" id="lastName" name="lastname" class="form-control form-control-lg" />
                                            <label class="form-label" for="lastName">Last Name</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 d-flex align-items-center">

                                        <div data-mdb-input-init class="form-outline datepicker w-100">
                                            <input type="date" class="form-control form-control-lg" id="birthdayDate" name="dob" />
                                            <label for="birthdayDate" class="form-label">Date of Birth</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <h6 class="mb-2 pb-1">Gender: </h6>

                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="gender"
                                                id="maleGender" value="Male" />
                                            <label class="form-check-label" for="maleGender">Male</label>
                                        </div>

                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="gender"
                                                id="femaleGender" value="Female" />
                                            <label class="form-check-label" for="femaleGender">Female</label>
                                        </div>

                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="gender"
                                                id="otherGender" value="Other" />
                                            <label class="form-check-label" for="otherGender">Other</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 pb-2">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="email" id="emailAddress" name="email"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="emailAddress">Email</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4 pb-2">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="tel" id="phoneNumber" class="form-control form-control-lg" name="phone"/>
                                            <label class="form-label" for="phoneNumber">Phone Number</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-12">
                                        <label class="form-label select-label">Choose Your Branch</label>

                                        <select class="select form-control-lg" name="branch">
                                            <option value="" disabled>Select</option>
                                            <option value="CSE">CSE</option>
                                            <option value="IT">IT</option>
                                            <option value="ECE">ECE</option>
                                        </select>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <input type="password" id="password" class="form-control form-control-lg" name="password"/>
                                        <label class="form-label" for="password">Password</label>
                                    </div>
                                    <div class="col-6">
                                        <input type="password" id="cpassword" class="form-control form-control-lg" />
                                        <label class="form-label" for="cpassword">Confirm Password</label>
                                    </div>
                                </div>
                                <div class="row mb-4">
                                    <div class="errpwd" id="errpwd"></div>
                                </div>
                                <div class="mt-4 pt-2">
                                    <input data-mdb-ripple-init id="submitButton" class="btn btn-primary btn-lg" type="submit" disabled="true"
                                        value="Submit" />
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
<script>
    $(document).ready(()=>{
        $('#cpassword').keyup(function(){
            var pwd = $('#password').val();
            var cpwd = $('#cpassword').val();
            if (pwd!=cpwd){
                $('#errpwd').html("Passwords do not match");
                $('#errpwd').css('color', 'red');
            }else{
                $('#errpwd').html('');
            }
       
        function validateForm() {
            var isValid = true;
            var pwd = $('#password').val();
            var cpwd = $('#cpassword').val();

            // Clear previous errors
            $('#errpwd').html('');

            // Check each input field is filled
            $('#registrationForm input').each(function () {
                if ($(this).val() === '' && $(this).attr('type') !== 'submit') {
                    isValid = false;
                    $('#errpwd').append('<div>Please fill all the fields.</div>');
                }
            });

            // Check if passwords match
            if (pwd !== cpwd) {
                $('#errpwd').append('<div>Passwords do not match.</div>');
                isValid = false;
            }

            // Enable or disable the submit button
            $('#submitButton').prop('disabled', !isValid);
        }

        // Attach the validateForm function to input events
        $('#registrationForm input').on('keyup change', validateForm);
        });
        })
</script>
</html>